    <div class="container">
        <!-- Kendo UI DatePicker -->
        <label for="datepicker">Select Date:</label>
        <input id="datepicker" />

        <!-- Kendo UI DropDownList -->
        <label for="dropdownlist">Select Item:</label>
        <input id="dropdownlist" />

        <!-- Kendo UI Button -->
        <button id="kendoButton">Click Me</button>

        <!-- Kendo UI Grid -->
        <div id="grid"></div>

        <script>$(document).ready(function () {
                // Initialize Kendo UI DatePicker
                $("#datepicker").kendoDatePicker();

                // Initialize Kendo UI DropDownList
                $("#dropdownlist").kendoDropDownList({
                    dataSource: ["Item 1", "Item 2", "Item 3"],
                    optionLabel: "Select an item"
                });

                // Initialize Kendo UI Button
                $("#kendoButton").kendoButton();

                // Initialize Kendo UI Grid
                $("#grid").kendoGrid({
                    dataSource: {
                        data: [
                            { Name: "Jane Doe", Age: 30 },
                            { Name: "John Smith", Age: 25 }
                        ],
                        schema: {
                            model: {
                                fields: {
                                    Name: { type: "string" },
                                    Age: { type: "number" }
                                }
                            }
                        },
                        pageSize: 10
                    },
                    height: 400,
                    scrollable: true,
                    sortable: true,
                    pageable: true,
                    columns: [
                        { field: "Name", title: "Name", width: "50%" },
                        { field: "Age", title: "Age", width: "50%" }
                    ]
                });
            });</script>
